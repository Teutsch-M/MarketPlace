<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#161616"
    tools:context=".fragments.LoginFragment">


    <LinearLayout
        android:layout_width="100.7dp"
        android:layout_height="24dp"
        android:background="@drawable/Bazaar_logo_coloured"
        android:layout_marginBottom="36dp"

        >

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#212121"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/log_in"
                android:textColor="#EEEEEE"
                android:textSize="16sp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="40dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="30.95dp"
                android:textColorHint="@color/white"
                app:helperText="Your email address"
                app:helperTextTextColor="#EE3B02"
                app:boxStrokeColor="#00B5C0"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                >

                <EditText
                    android:id="@+id/edittext_email_login_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    android:autofillHints="emailAddress"
                    android:inputType="textEmailAddress"

                    />


            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="14.95dp"
                android:textColorHint="#B2EEEEEE"
                app:boxStrokeColor="#00B5C0"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                >

                <EditText
                    android:id="@+id/edittext_password_login_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password"
                    android:autofillHints="password"
                    android:inputType="textPassword"
                    />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_login_login_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="28.8dp"
                android:backgroundTint="#00B5C0"
                android:text="@string/log_in"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:cornerRadius="26dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                >


            </com.google.android.material.button.MaterialButton>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:weightSum="1"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/forgot_password"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    />

                <TextView
                    android:id="@+id/textview_forgotpassword_login_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/click_here"
                    android:textColor="#00B5C0"
                    android:textSize="12sp"
                    android:layout_weight="0.5"
                    android:layout_marginStart="8dp"

                    />

            </LinearLayout>



            <View
                android:layout_width="247dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#1FEEEEEE"
                android:layout_marginTop="24dp"
                />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/new_to_bazaar"
                android:textColor="#B2EEEEEE"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginTop="24dp"
                />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_signup_login_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="41dp"
                android:layout_marginTop="16dp"
                app:strokeColor="@color/white"
                android:text="@string/sign_up"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:cornerRadius="26dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                >


            </com.google.android.material.button.MaterialButton>




        </LinearLayout>


    </androidx.cardview.widget.CardView>



</LinearLayout>